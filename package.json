{
  "name": "image_processing_api",
  "version": "1.0.0",
  "description": "Simple image processing api project",
  "author": "",
  "license": "ISC",
  "scripts": {
    "build:client": "cd client && npm run build",
    "build:server": "cd server && npm run build",
    "build": "concurrently \"npm run build:server\"",
    "install:client": "cd client && npm i",
    "install:server": "cd server && npm i",
    "install:all": "npm i && concurrently \"npm run install:server\"",
    "start:client": "cd client && npm run start",
    "start:server": "cd server && npm run start",
    "start": "concurrently \"npm run start:server\"",
    "test:client": "cd client && npm run test",
    "test:server": "cd server && npm run test",
    "test": "concurrently \"npm run test:server\"",
    "lint:client": "cd client && npm run lint",
    "lint:server": "cd server && npm run lint",
    "lint": "concurrently \"npm run lint:server\"",
    "prettier:client": "cd client && npm run prettier",
    "prettier:server": "cd server && npm run prettier",
    "prettier": "concurrently \"npm run prettier:server\""
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3"
  }
}
